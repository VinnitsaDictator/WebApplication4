@page
@model WebApplication3.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <section class="card shadow p-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="registerForm">
                <h4 class="text-center mb-4">Create a new account</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="form-label">Name</label>
                    <input asp-for="Input.Name" type="text" class="form-control" placeholder="Enter your full name">
                    <span asp-validation-for="Input.Name" class="form-text text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">BirthDate</label>
                    <input asp-for="Input.BirthDate" type="date" class="form-control" placeholder="Enter your birthdate">
                    <span asp-validation-for="Input.BirthDate" class="form-text text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter your email address">
                    <span asp-validation-for="Input.Email" class="form-text text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter a strong password">
                    <span asp-validation-for="Input.Password" class="form-text text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password">
                    <span asp-validation-for="Input.ConfirmPassword" class="form-text text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
        </section>
    </div>
</div>

<div>
    <p>
        <a asp-page="./Login">Already have an account? Log in</a>
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


