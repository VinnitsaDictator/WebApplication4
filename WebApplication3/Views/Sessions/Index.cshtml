@model List<Session>

@{
    ViewData["Title"] = "Sessions";
}

<h1>Sessions</h1>

<p>
    <a asp-action="CreateSession" class="btn btn-primary">Добавить сеанс</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Фильм</th>
            <th>Дата и время</th>
            <th>Зал</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.Film.Title</td>
                <td>@session.Date.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@session.Hall</td>
                <td>@session.Price.ToString("C")</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@session.Id" />
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


