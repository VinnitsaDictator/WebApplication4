@model List<Film>

@{
    ViewData["Title"] = "Favorite Films";
}

<h1>Favorite Films</h1>

@if (Model.Count == 0)
{
    <p>У вас нет любимых фильмов.</p>
}
else
{
    <ul>
        @foreach (var film in Model)
        {
            <li>
                @film.Title (@film.Year)
                <a asp-action="RemoveFromFavorites" asp-route-id="@film.Id" class="btn btn-danger">Удалить</a>
            </li>
        }
    </ul>
}



