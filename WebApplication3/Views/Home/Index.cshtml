@model List<Film>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
@foreach (var item in Model)
{
<div class="movie-container">
    <div class="movie-poster">
            <img src="@item.PosterUrl" alt="Постер фильма">
    </div>
    <div class="movie-info">
            <h2>@item.Title (@item.Year)</h2>
            <p><strong>Жанр:</strong> @item.Genre</p>
            <p>@item.Description</p>
    </div>
    <div class="movie-actions">
        <button class="btn btn-primary">Купить билет</button>
        <button class="btn btn-secondary">Смотреть трейлер</button>
    </div>
</div>
}