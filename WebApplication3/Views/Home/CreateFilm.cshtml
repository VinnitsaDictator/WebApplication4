@model Film

<h1>Create New Film</h1>

<form class="row g-3" asp-action="CreateFilm" method="post">
    <div class="col-md-6">
        <label class="form-label">Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter title">
        <span asp-validation-for="Title" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Year</label>
        <input asp-for="Year" type="number" class="form-control" placeholder="Enter year">
        <span asp-validation-for="Year" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Genre</label>
        <input asp-for="Genre" type="text" class="form-control" placeholder="Enter genre">
        <span asp-validation-for="Genre" class="form-text text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Duration</label>
        <input asp-for="Duration" type="number" class="form-control" placeholder="Enter duration">
        <span asp-validation-for="Duration" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter description"></textarea>
        <span asp-validation-for="Description" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label class="form-label">Trailer URL</label>
        <input asp-for="TrailerUrl" type="url" class="form-control" placeholder="Enter trailer URL">
        <span asp-validation-for="TrailerUrl" class="form-text text-danger"></span>
    </div>
    <div class="col-md-12">
        <label class="form-label">Poster URL</label>
        <input asp-for="PosterUrl" type="url" class="form-control" placeholder="Enter poster URL">
        <span asp-validation-for="PosterUrl" class="form-text text-danger"></span>
    </div>

    <div class="col-md-6">
        <button type="submit" class="btn btn-primary w-100">Create</button>
    </div>
    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-dark w-100">Back</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



